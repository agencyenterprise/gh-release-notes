{
  "name": "GitHub - Release Notes Compiler",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Help you to build release notes from a GitHub pull request",
  "homepage_url": "https://ae.studio",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["src/bg/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "GitHub - Release Notes Compiler",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": ["clipboardWrite", "https://github.com/*"],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["js/index.js"],
      "run_at": "document_end"
    }
  ]
}
